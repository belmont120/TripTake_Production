<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container main">
    <div class="row">
        <% include ../partials/flash %>
        <div class="col-md-3">
            <p class="lead">TripTake</p>
            <div class="list-group">
                <li class="list-group-item" active>Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>

        <div class="col-md-9">
            <div class="thumbnail">
                <img src="<%= moment.image %>" alt="<%= moment.description %>" class="img-responsive">
                <div class="caption">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a href="#"><%= moment.name %></a></h4>
                    <p><%- moment.description %></p>
                    <p>
                        <em>Submitted By <%= moment.author.username %></em>
                    </p>

                    <% if(currentUser && (moment.author.id.equals(currentUser._id) || currentUser.isAdmin)) { %>
                        <a class="btn btn-warning" href="/moments/<%= moment._id %>/edit">Edit</a>
                        <form class="delete-form" action="/moments/<%= moment._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>

                </div>
            </div>

            <div class="well">
                <div class="text-right">
                    <a href="/moments/<%= moment._id %>/comments/new" class="btn btn-primary">Leave Comment</a>   
                </div>
                <% moment.comments.forEach(function(comment){ %>
                    <hr>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p><%= comment.text %></p>
                            <% if(currentUser && (comment.author.id.equals(currentUser._id) || currentUser.isAdmin)) { %>
                                <a class="btn btn-warning" href="/moments/<%= moment._id %>/comments/<%= comment._id %>/edit">Edit</a>
                                <form class="delete-form" action="/moments/<%= moment._id %>/comments/<%= comment._id %>/?_method=DELETE" method="POST">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>

    

    

    
    

    <ul class="list-group">

    </ul>

    


</div>
<% include ../partials/navbarBottom %>
<% include ../partials/footer %>