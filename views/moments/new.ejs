<% include ../partials/header %>
<% include ../partials/navbar %>
<div class="container main">
    <div class="row">
        <% include ../partials/flash %>
        <div class="form-container">
            <form action="/moments" method="POST" role="form" enctype="multipart/form-data">
                <legend style="text-align: center;">New Moment</legend>

                <div class="form-group">
                    <label for="momentName">Name</label>
                    <input type="text" name="moment[name]" class="form-control" id="momentName" placeholder="Name" required>
                </div>

                <div class="form-group">
                    <label for="momentImage">Image</label>
                    <input type="file" name="moment[image]" class="form-control" id="momentImage" accept="image/*" required>
                </div>

                <div class="form-group">
                    <label for="momentLocation">Location</label>
                    <input type="text" name="moment[location]" class="form-control" id="momentLocation" placeholder="1280 Ferntree Gully Rd, Scoresby VIC 3179">
                </div>

                <div class="form-group">
                    <label for="momentDesc">Description</label>
                    <textarea rows="6" name="moment[description]" class="form-control" id="momentDesc" placeholder="Description"></textarea>
                </div>

                <div class="wrapper text-center">
                    <div class="btn-group" role="group" aria-label="...">
                        <a href="/moments" class="btn btn-danger" role="button">Back To Moments</a>
                        <button type="submit" class="btn btn-primary" onclick="waitingDialog.show('Uploading Moment...');">Submit</button>
                    </div>
                </div>
            </form>
          
        </div>

    </div>

</div>

<% include ../partials/navbarBottom %>
<% include ../partials/footer %>